<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.bupt.indooranalysis.Util.ArcProgress
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/progress"
            app:arc_max="100"
            app:arc_progress="0"
            app:arc_unfinished_color="@color/white"
            app:arc_finished_color="@color/colorPrimaryDark"
            app:arc_bottom_text="巡检进度"
            app:arc_angle="270"
            app:arc_stroke_width="10sp"
            app:arc_text_color="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />


</RelativeLayout>
